<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://BOLT\CourseMonitorReport:1433;databaseName=CourseMonitorReport</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password">sa</property>
    <property name="hibernate.enable_lazy_load_no_trans">true</property>
    <mapping resource="com/coursemonitor/entity/Report.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/Dlt.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/Course.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/Guest.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/AssignCourse.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/AssignFaculty.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/Pvc.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/Faculty.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/ManagementStaff.hbm.xml"/>
    <mapping resource="com/coursemonitor/entity/Staff.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
